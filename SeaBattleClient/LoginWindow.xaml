<Window x:Class="SeaBattleClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattleClient"
        mc:Ignorable="d"
        Title="LoginWindow" Height="160" Width="300" >
    <Grid Background="DarkBlue">
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="36" Foreground="OrangeRed" FontFamily="IMPACT" >Введите имя</Label>
        <TextBox VerticalAlignment="Center" Margin="10" Background="Aqua" Foreground="Red" Height="30" FontFamily="Impact" FontSize="20" Name="nickTxtBox"></TextBox>
        <Button VerticalAlignment="Bottom" Margin="35,0,35,10" FontSize="24" Background="Aqua" Foreground="Red" FontFamily="Impact" Click="Button_Click">Зарегистрироваться</Button>
    </Grid>
</Window>
